<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.Login">

    <LinearLayout
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:background="@color/gray"
        android:padding="10dp">

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/correo"
            android:background="@color/background_input"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/text_color_hint_login"
            android:padding="5sp"
            android:layout_marginVertical="10sp"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/contrasena"
            android:background="@color/background_input"
            android:inputType="textPassword"
            android:textColorHint="@color/text_color_hint_login"
            android:padding="5sp"
            android:layout_marginVertical="10sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_google_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Google"
                app:icon="@drawable/google_icon"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:layout_marginHorizontal="5sp"
                android:backgroundTint="@color/google_blue"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5sp"
                android:backgroundTint="@color/button_sign_in"
                android:text="Iniciar Sesion" />

            <Button
                android:id="@+id/btn_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5sp"
                android:backgroundTint="@color/button_sign_up"
                android:textColor="@color/black"
                android:text="Registrarse"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_forgot_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Olvide la ContraseÃ±a"
            android:textAlignment="center"
            android:textStyle="normal"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>